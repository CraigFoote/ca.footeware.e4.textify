<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="ca.footeware.e4.textify.fragment"
         point="org.eclipse.e4.workbench.model">
      <fragment
            apply="notexists"
            uri="fragment.e4xmi">
      </fragment>
   </extension>
   <extension
         point="com.opcoach.e4.preferences.e4PreferencePages">
      <page
            class="ca.footeware.e4.textify.ui.preferences.BackgroundPreferencePage"
            id="ca.footeware.e4.textify.ui.page.background"
            name="Background">
      </page>
      <page
            class="ca.footeware.e4.textify.ui.CursorLinePainterPreferencePage2"
            id="ca.footeware.e4.textify.ui.page.currentline"
            name="Current Line">
      </page>
      <page
            class="ca.footeware.e4.textify.ui.preferences.FontPreferencePage"
            id="ca.footeware.e4.textify.ui.page.font"
            name="Font">
      </page>
   </extension>

</plugin>
